<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/background_picture"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="100dp" android:paddingTop="15dp">
        <Gallery
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/record_picture_gallery" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/record_picture_imageView" android:layout_gravity="center"
                android:layout_margin="20dp"/>
    </LinearLayout>
</LinearLayout>